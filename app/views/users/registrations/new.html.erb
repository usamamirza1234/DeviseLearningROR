<div class="col-lg-6 mx-lg-auto">
  <div class="card shadow">
    <div class="card-header text-center">
      <h2>Sign up</h2>
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="form-group  mb-2">
          <%= f.label :first_name, class: 'mb-2'  %>
          <%= f.text_field :first_name, class: 'form-control form-control-lg' %>
        </div>
        <div class="form-group  mb-2">
          <%= f.label :last_name, class: 'mb-2'  %>
          <%= f.text_field :last_name, class: 'form-control form-control-lg' %>
        </div>
        <div class="form-group  mb-2">
          <%= f.label :contact_number, class: 'mb-2'  %>
          <%= f.text_field :contact_number, class: 'form-control form-control-lg' %>
        </div>
        <div class="form-group  mb-2">
          <%= f.label :username, class: 'mb-2'  %>
          <%= f.text_field :username, class: 'form-control form-control-lg' %>
        </div>

        <div class="form-group  mb-2">
          <%= f.label :email, class: 'mb-2'  %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: 'form-control form-control-lg' %>
        </div>

        <div class="form-group  mb-2">
          <%= f.label :password, class: 'mb-2'  %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control form-control-lg' %>
        </div>

        <div class="form-group  mb-2">
          <%= f.label :password_confirmation, class: 'mb-2'  %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control form-control-lg' %>
        </div>

        <div class="form-group  mb-2">
          <%= f.label :address, class: 'mb-2'  %>
          <%= f.text_field :address, class: 'form-control form-control-lg' %>
        </div>



        <div class="actions  mt-4">
          <%= f.submit "Sign up" , class: 'btn btn-primary'%>
        </div>
      <% end %>
    </div>
    <div class="card-footer">
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>




