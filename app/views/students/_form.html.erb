<%= form_with(model: student) do |form| %>
  <% if student.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(student.errors.count, "error") %> prohibited this student from being saved:</h2>

      <ul>
        <% student.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group ">
    <%= form.label :first_name, class: 'mb-2' %>
    <%= form.text_field :first_name, autofocus: true, autocomplete: "first_name", class: 'form-control form-control-lg' %>
  </div>
  <div class="form-group ">
    <%= form.label :last_name, class: 'mb-2' %>
    <%= form.text_field :last_name, autofocus: true, autocomplete: "last_name", class: 'form-control form-control-lg' %>
  </div>
  <div class="form-group ">
    <%= form.label :email, class: 'mb-2' %>
    <%= form.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control form-control-lg' %>
  </div>
  <div class="form-group ">
    <%= form.label :date_of_birth, class: 'mb-2' %>
    <%= form.date_field :date_of_birth, class: 'form-control form-control-lg' %>
  </div>
  <div class="form-group ">
    <%= form.label :permanent_address, class: 'mb-2' %>
    <%= form.text_field :permanent_address, autofocus: true, autocomplete: "permanent_address", class: 'form-control form-control-lg' %>
  </div>
  <div class="form-group ">
    <%= form.label :local_address, class: 'mb-2' %>
    <%= form.text_field :local_address, autofocus: true, autocomplete: "local_address", class: 'form-control form-control-lg' %>
  </div>

  <div class="form-group ">
    <%= form.label :permanent_contact_number, class: 'mb-2' %>
    <%= form.text_field :permanent_contact_number, autofocus: true, autocomplete: "permanent_contact_number", class: 'form-control form-control-lg' %>
  </div>

  <div class="form-group ">
    <%= form.label :alternative_contact_number, class: 'mb-2' %>
    <%= form.text_field :alternative_contact_number, autofocus: true, autocomplete: "alternative_contact_number", class: 'form-control form-control-lg' %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
