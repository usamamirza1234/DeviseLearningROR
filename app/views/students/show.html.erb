<div class="col-lg-10">
  <div class="card rounded-0 shadow mt-5 mb-5">
    <div class="card-header">
      <h1>Student Details</h1>
    </div>
    <div class="card-body">
      <p id="notice"><%= notice %></p>
      <p>
        <strong>First Name:</strong> <%= @student.first_name %>
      </p>
      <p>
        <strong>Last Name:</strong> <%= @student.last_name %>
      </p>
      <p>
        <strong>Email:</strong> <%= @student.email %>
      </p>
      <p>
        <strong>DOB:</strong>  <%= formated_date(@student.date_of_birth ) %>
      </p>
      <p>
        <strong>Permanent Contact:</strong> <%= @student.permanent_contact_number %>
      </p>
      <p>
        <strong>Secondary Contact:</strong> <%= @student.alternative_contact_number %>
      </p>
      <p>
        <strong>Permanent Address:</strong> <%= @student.permanent_address %>
      </p>
      <p>
        <strong>Secondary Address:</strong> <%= @student.local_address %>
      </p>
      <div class="">

        <%= link_to 'Edit', edit_student_path(@student), class: "btn btn-primary" %>
        <%= link_to 'Back', students_path, class: "btn btn-secondary" %>
      </div>
    </div>

  </div>

</div>