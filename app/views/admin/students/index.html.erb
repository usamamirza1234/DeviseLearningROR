<div class="col-lg-10">
  <%= search_form_for @q, url: :admin_students do |f| %>
  <div class="form-group">
    <%= f.label :first_name %>
    <%= f.text_field :first_name_cont, class: "form-control" %>
  </div>

    <div class="form-group">
      <%= f.submit class: 'btn btn-primary'  %>
    </div>

  <% end %>

  <p id="notice"><%= notice %></p>

  <h1>Students Listing</h1>

  <table class="table table-bordered">
    <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th colspan="3">Operations</th>
    </tr>
    </thead>

    <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.first_name %></td>
        <td><%= student.last_name %></td>
        <td><%= student.email %></td>
        <td><%= link_to 'Show', admin_student_path(student) %></td>
        <td><%= link_to 'Edit', edit_admin_student_path(student) %></td>
        <td><%= link_to 'Destroy', admin_student_path(student), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <%= paginate @students %>
  <br>

  <%= link_to 'New Student', new_admin_student_path, class: "btn btn-primary btn-lg" %>
</div>